{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint:staged": "lint-staged",
    "dev": "next dev",
    "build": "pnpm lint && pnpm format && pnpm docs:build && next build",
    "build:static": "pnpm lint && pnpm format && pnpm docs:build && next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "test:ci": "jest --ci --runInBand",
    "test": "jest",
    "docs:build": "python3 -m mkdocs build -d public/docs",
    "docs:serve": "python3 -m mkdocs serve"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm test -- --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@ianlintner/theme": "workspace:*",
    "@tailwindcss/typography": "latest",
    "@tanstack/react-query": "latest",
    "@trpc/client": "latest",
    "@trpc/next": "latest",
    "@trpc/react-query": "latest",
    "@trpc/server": "latest",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "latest",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "latest",
    "mermaid": "^11.11.0",
    "next-auth": "latest",
    "pg": "^8.16.3",
    "phaser": "^3.90.0",
    "postcss": "^8.4.0",
    "react-icons": "^5.5.0",
    "react-markdown": "latest",
    "rehype-highlight": "latest",
    "remark-gfm": "latest",
    "superjson": "^2.2.2",
    "tailwindcss": "^3.4.0",
    "zod": "latest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/user-event": "latest",
    "@types/bcryptjs": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/pg": "^8.15.6",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/react-syntax-highlighter": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "jest": "latest",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.5.3",
    "prettier": "latest",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "latest"
  }
}

{
  "name": "@ianlintner/theme",
  "version": "0.1.1",
  "description": "Shared theme components and configuration for apps",
  "author": "Ian Lintner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianlintner/portfolio.git",
    "directory": "packages/theme"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && cp src/styles/globals.css dist/styles.css",
    "lint": "pnpm exec eslint src/",
    "prepublishOnly": "pnpm build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "files": [
    "dist",
    "tailwind.config.ts"
  ],
  "dependencies": {
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "@types/react": "^18.0.0",
    "@types/node": "^20.0.0"
  }
}
